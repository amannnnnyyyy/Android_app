<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_chat_nav"
    app:startDestination="@id/chatHolderFragment">

    <fragment
        android:id="@+id/chatHolderFragment"
        android:name="com.example.myapplication1.ui.fragments.chat_holder.ChatHolderFragment"
        android:label="fragment_chat_holder"
        tools:layout="@layout/fragment_chat_holder" >
        <action
            android:id="@+id/action_chatHolderFragment_to_chatDetailFragment"
            app:destination="@id/chatDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatDetailFragment"
        android:name="com.example.myapplication1.ui.fragments.chat_detail.ChatDetailFragment"
        android:label="fragment_chat_detail"
        tools:layout="@layout/fragment_chat_detail" >
        <argument
            android:name="chat_id"
            app:argType="integer" />
    </fragment>
</navigation>