<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@id/middle_state"
        app:duration="500"
        >
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/contact_detail_rest"
            app:touchAnchorSide="top"
            />
    </Transition>

    <Transition
        app:constraintSetStart="@+id/middle_state"
        app:constraintSetEnd="@+id/end"
        app:duration="1000"
        >
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/contact_detail_rest"
            app:touchAnchorSide="top"
            />
    </Transition>

    <Transition
        app:constraintSetStart="@+id/start_state"
        app:constraintSetEnd="@+id/end_state"
        app:duration="2000">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/contact_detail_rest"
            app:touchAnchorSide="top"
            />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/go_back"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:contentDescription="@string/go_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginTop="10dp"
            >
        </Constraint>
        <Constraint
            android:id="@+id/more_options"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:contentDescription="@string/more_options"
            android:src="@drawable/more"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1"
            >

        </Constraint>
        <Constraint
            android:id="@+id/name_on_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="unknown"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/user_profile_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/more_options"
            app:layout_constraintHorizontal_bias="0.1"
            android:scaleX="1"
            android:textColor="@color/white"
            >

        </Constraint>
        <Constraint
            android:id="@+id/user_profile_picture"
            android:layout_height="40dp"
            android:layout_width="40dp"
            app:layout_constraintStart_toEndOf="@id/go_back"
            app:layout_constraintEnd_toStartOf="@id/more_options"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="0.1"
            >

        </Constraint>

        <Constraint
            android:id="@+id/contact_detail_rest"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_profile_picture"
            app:layout_constraintEnd_toEndOf="parent"
            >

        </Constraint>
        <Constraint
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_profile_picture"
            android:background="@color/greyish"
            >

        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/middle_state"
        >
        <Constraint
            android:id="@+id/name_on_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="unknown"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/user_profile_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/more_options"
            app:layout_constraintHorizontal_bias="0.1"
            android:scaleY="10"
            android:textColor="@color/white"
            >

        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/contact_detail_rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_profile_picture"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <!--            <CustomAttribute-->
            <!--                app:attributeName="layout_constraintBottom_toBottomOf"-->
            <!--                app:customDimension="parent"-->
            <!--                />-->
        </Constraint>
        <Constraint
            android:id="@+id/user_profile_picture"
            android:layout_height="100dp"
            android:layout_width="100dp"
            app:layout_constraintStart_toEndOf="@id/go_back"
            app:layout_constraintEnd_toStartOf="@id/more_options"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            >

        </Constraint>
    </ConstraintSet>

</MotionScene>
