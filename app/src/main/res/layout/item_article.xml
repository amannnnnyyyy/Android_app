<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whatsapp_card_background"
    android:layout_margin="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/article_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/world_news"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_above="@id/article_content"
            />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/article_image"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_flex_variable_font_grad"
            android:textSize="16sp"
            android:text="This is title"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/article_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomBarrier"
            app:layout_constraintHorizontal_bias="0"
            android:paddingRight="5dp"
            />
        <androidx.constraintlayout.widget.Barrier
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bottomBarrier"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="article_image,article_title"
            />
        <TextView
            android:id="@+id/article_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_title"
            android:textColor="@color/greyish"
            android:layout_marginStart="10dp"
            android:text="this is description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottomBarrier"
            android:paddingRight="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainContent"
        android:background="@drawable/message_layout"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/sourceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source : "
            />
        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sourceTitle"
            android:text="new"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/source"
            android:layout_centerHorizontal="true"
            android:textColor="@color/greyish"
            android:text="new"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>