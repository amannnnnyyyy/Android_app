<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".news.ui.fragments.searchNews.SearchNewsFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Searching News"
        android:fontFamily="@font/kalufira"
        android:textSize="26sp"
        android:gravity="center"
        android:padding="20dp"
        />
    <EditText
        android:id="@+id/search_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="mom,dad,sis,bro"
        android:background="@color/white_transparent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:hint="@string/search"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/greyish"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSearchNews"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_area"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>