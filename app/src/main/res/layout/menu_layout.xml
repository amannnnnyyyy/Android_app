<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_input_layout"
            android:baselineAligned="false"
            android:id="@+id/firstLayout"
            android:layout_margin="5dp"
            android:padding="6.2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/none"
                android:scaleType="fitCenter"
                android:src="@drawable/home_icon"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/educ_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/none"
                android:scaleType="fitCenter"
                android:src="@drawable/educ_icon"
                tools:ignore="NestedWeights"
                android:clickable="true"
                android:focusable="true" />
            <ImageView
                android:id="@+id/calc_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/none"
                android:scaleType="fitCenter"
                android:src="@drawable/calculator_icon"
                tools:ignore="NestedWeights"
                android:clickable="true"
                android:focusable="true"/>


            <ImageView
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/none"
                android:scaleType="fitCenter"
                android:src="@drawable/info_icon"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/health"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/none"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/health_icon"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/google"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/none"
                android:scaleType="fitCenter"
                android:src="@drawable/google_icon"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/firstLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="#afa"
        />

</androidx.constraintlayout.widget.ConstraintLayout>