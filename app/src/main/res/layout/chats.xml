<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/normal_background_layout"
    >
    <LinearLayout
        android:id="@+id/search"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_layout"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/search"
            android:src="@drawable/search_icon"
            app:tint="@color/greyish"
            />
        <EditText
            android:id="@+id/search_area"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="mom,dad,sis,bro"
            android:background="@color/white_transparent"
            android:hint="@string/search"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/greyish"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userProfile"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/background"
            android:contentDescription="@string/profile_picture"
            android:scaleType="centerCrop"
            android:transitionName="profile_pic"
            android:background="@drawable/rounded_layout"
            android:layout_centerVertical="true"
            app:shapeAppearanceOverlay="@style/RoundedCornersImageView"
            />

       <LinearLayout
           android:id="@+id/text_contents"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toEndOf="@id/userProfile"
           android:layout_toStartOf="@id/time"
           android:layout_centerVertical="true"
           android:orientation="vertical"
           >
           <TextView
               android:id="@+id/name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:background="@drawable/normal_background_layout"
               android:ellipsize="end"
               android:lines="1"
               android:text="My dsakdsla"
               android:layout_gravity="center_vertical"
               android:textColor="@color/white"
               android:textSize="18sp"
               android:textStyle="bold"
               />

           <TextView
               android:id="@+id/message"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Message yourself"
               android:background="@drawable/normal_background_layout"
               android:textSize="12sp"
               android:ellipsize="end"
               android:lines="2"
               android:layout_marginLeft="10dp"
               app:layout_constraintTop_toBottomOf="@id/name"
               app:layout_constraintStart_toEndOf="@id/userProfile"
               android:textColor="@color/clicked_background"
               android:layout_below="@id/name"
               />
       </LinearLayout>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/09/2025"
            android:background="@drawable/normal_background_layout"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/text_contents"
            app:layout_goneMarginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/clicked_background"
            />

        <TextView
            android:id="@+id/notification"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:background="@drawable/unread_rouned_shape"
            android:gravity="center"
            android:minWidth="10dp"
            android:minHeight="10dp"
            android:padding="2dp"
            android:text="99"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/time"

            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>