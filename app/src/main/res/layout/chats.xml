<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/normal_background_layout"
    >
    <LinearLayout
        android:id="@+id/search"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chats"
        app:layout_constraintVertical_bias="0"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_layout"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/search"
            android:src="@drawable/search_icon"
            app:tint="@color/greyish"
            />
        <EditText
            android:id="@+id/search_area"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="mom,dad,sis,bro"
            android:background="@color/white_transparent"
            android:hint="@string/search"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/greyish"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/chats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/normal_background_layout"
        app:layout_constraintTop_toBottomOf="@id/search">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userProfile"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_layout"
            android:contentDescription="@string/profile_picture"
            android:scaleType="centerCrop"
            android:src="@drawable/background"
            app:shapeAppearanceOverlay="@style/RoundedCornersImageView" />

        <LinearLayout
            android:id="@+id/text_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@id/time"
            android:layout_toEndOf="@id/userProfile"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/normal_background_layout"
                android:ellipsize="end"
                android:lines="1"
                android:text="My dsakdsla"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="10dp"
                android:background="@drawable/normal_background_layout"
                android:ellipsize="end"
                android:lines="2"
                android:text="Message yourself"
                android:textColor="@color/clicked_background"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/userProfile"
                app:layout_constraintTop_toBottomOf="@id/name" />
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/normal_background_layout"
            android:text="28/09/2025"
            android:textColor="@color/clicked_background"
            android:textSize="12sp"
            app:layout_goneMarginLeft="5dp" />

        <TextView
            android:id="@+id/notification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/time"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/unread_rouned_shape"
            android:gravity="center"
            android:minWidth="10dp"
            android:minHeight="10dp"
            android:padding="2dp"
            android:text="99"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintDimensionRatio="1:1" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>