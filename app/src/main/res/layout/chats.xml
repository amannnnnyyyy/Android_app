<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/normal_background_layout"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userProfile"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/background"
        android:contentDescription="@string/profile_picture"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_layout"
        app:shapeAppearanceOverlay="@style/RoundedCornersImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/normal_background_layout"
        android:ellipsize="end"
        android:lines="1"
        android:text="My dsakdsla"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/userProfile"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message yourself"
            android:background="@drawable/normal_background_layout"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toEndOf="@id/userProfile"
            android:textColor="@color/clicked_background"
            />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28/09/2025"
        android:background="@drawable/normal_background_layout"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_goneMarginLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/clicked_background"
        />

    <TextView
        android:id="@+id/notification"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:background="@drawable/unread_rouned_shape"
        android:gravity="center"
        android:minWidth="10dp"
        android:minHeight="10dp"
        android:padding="2dp"
        android:text="99"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/message"
        app:layout_constraintTop_toBottomOf="@id/time"

        />
</androidx.constraintlayout.widget.ConstraintLayout>