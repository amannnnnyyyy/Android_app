<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".drawing_app.ui.DrawingMain">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintTop_toBottomOf="@id/btn_color_group"
       app:layout_constraintBottom_toBottomOf="parent"
       android:background="@color/white"
      >
      <ImageView
          android:id="@+id/gallery_image"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/white"
         />
      <com.example.myapplication1.drawing_app.ui.DrawingView
          android:id="@+id/draw"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />
   </androidx.constraintlayout.widget.ConstraintLayout>

   <LinearLayout
       android:id="@+id/btn_group"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:gravity="center_horizontal"
       android:background="@color/greyish"
      >
      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/brush"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:src="@drawable/paintbrush"
          android:background="@color/white_transparent"
          app:tint="@color/white"
          android:padding="10dp"
          />
      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/reset"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:src="@drawable/cleaning"
          android:background="@color/transparent_full"
          android:padding="10dp"
          />
      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/undo"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:src="@drawable/undo"
          android:background="@color/white_transparent"
          android:padding="10dp"
          />

      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/color_picker"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:src="@drawable/color_picker"
          android:background="@color/white_transparent"
          android:padding="10dp"
          />

      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/gallery"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:src="@drawable/gallery"
          android:background="@color/white_transparent"
          android:padding="10dp"
          />

      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/save"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:src="@drawable/download"
          android:background="@color/white_transparent"
          app:tint="@color/white"
          android:padding="10dp"
          />
   </LinearLayout>

   <LinearLayout
       android:id="@+id/btn_color_group"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btn_group"
       android:background="@color/greyish"
       android:gravity="center_horizontal"
       >
      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/purple"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:layout_marginHorizontal="10dp"
          android:src="@drawable/button"
          android:background="@color/white_transparent"
          app:tint="@color/purple_700"
          android:padding="10dp"
          />
      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/red"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:layout_marginHorizontal="10dp"
          android:src="@drawable/button"
          android:background="@color/white_transparent"
          app:tint="@color/whatsAppRed"
          android:padding="10dp"
          />

      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/black"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:layout_marginHorizontal="10dp"
          android:src="@drawable/button"
          android:background="@color/white_transparent"
          app:tint="@color/black"
          android:padding="10dp"
          />

      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/green"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:layout_marginHorizontal="10dp"
          android:src="@drawable/button"
          android:background="@color/white_transparent"
          app:tint="#0f0"
          android:padding="10dp"
          />

      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/yellow"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:scaleType="fitXY"
          android:layout_marginHorizontal="10dp"
          android:src="@drawable/button"
          android:background="@color/white_transparent"
          app:tint="#ff0"
          android:padding="10dp"
          />
   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>