<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/almost_transparent"
    android:paddingHorizontal="15dp"
    >

    <ImageView
        android:id="@+id/lifestyle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/healthy_lifestyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="App Options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lifestyle"
        android:textSize="20sp"
        android:fontFamily="@font/kalufira"
        android:textColor="#ffd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Everything at one place"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:textSize="10sp"
        android:textStyle="italic"
        android:fontFamily="@font/college_block_2"
        android:textColor="#ffd"
        />
</androidx.constraintlayout.widget.ConstraintLayout>