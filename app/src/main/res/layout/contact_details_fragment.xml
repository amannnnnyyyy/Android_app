<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.contact_detail.ContactDetailsFragment"
    android:background="@color/almost_black">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/whatsAppCard"
        android:weightSum="1"
        android:padding="15dp"
        >
        <ImageView
            android:id="@+id/go_back"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:contentDescription="@string/go_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:src="@drawable/left_arrow"
            app:tint="@color/white"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_profile_picture"
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:shapeAppearanceOverlay="@style/RoundedCornersImageView"
            app:layout_constraintWidth_percent="0.4"
            android:contentDescription="@string/profile_picture"
            android:src="@drawable/profile_picture"
            android:background="@drawable/rounded_layout"
            app:layout_constraintStart_toEndOf="@id/go_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/more_options"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:contentDescription="@string/more_options"
            android:src="@drawable/more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:tint="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/user_detail_identifiers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/whatsAppCard"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknown"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_margin="5dp"
                    android:textFontWeight="800"
                    />
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+911"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_margin="2dp"
                    android:textFontWeight="300"
                    />
                <TextView
                    android:id="@+id/last_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_seen"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginBottom="10dp"
                    android:textFontWeight="300"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_detail_identifiers"
                app:layout_constraintBottom_toTopOf="@id/bio_message"
                android:layout_marginBottom="5dp"
                android:background="@color/whatsAppCard"
                />
            <LinearLayout
            android:id="@+id/audio_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_detail_identifiers"
            app:layout_constraintEnd_toStartOf="@id/video_call"
            android:background="@drawable/whatsapp_button_background"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:contentDescription="@string/audio_call"
                android:src="@drawable/audio_call"
                app:tint="#070"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="@string/audio"
                android:textColor="@color/white"
                />
        </LinearLayout>
            <LinearLayout
            android:id="@+id/video_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/audio_call"
            app:layout_constraintTop_toBottomOf="@id/user_detail_identifiers"
            app:layout_constraintEnd_toStartOf="@id/search"
            android:background="@drawable/whatsapp_button_background"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:contentDescription="@string/video_call"
                android:src="@drawable/video_call_whatsapp"
                app:tint="#070"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_call"
                android:textColor="@color/white"
                />
        </LinearLayout>
            <LinearLayout
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/video_call"
            app:layout_constraintTop_toBottomOf="@id/user_detail_identifiers"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/whatsapp_button_background"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/search"
                android:src="@drawable/search_icon"
                app:tint="#070"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textColor="@color/white"
                />
        </LinearLayout>
            <TextView
                android:id="@+id/bio_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bio_message"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search"
                    android:layout_marginTop="15dp"
                    android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                    android:textColor="@color/white"
                    android:background="@color/whatsAppCard"
                />
            <RelativeLayout
                android:id="@+id/media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bio_message"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:background="@color/whatsAppCard"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/media_links_docs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/media_links_and_docs"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/more"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/white"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/notification_whole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/media"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:background="@color/whatsAppCard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_notifications_none_24"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/greyish"
                    android:paddingVertical="3dp"
                    />
                <TextView
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/media_links_and_docs"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/media_whole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notification_whole"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:background="@color/whatsAppCard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/media_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/greyish"
                    android:paddingVertical="3dp"
                    />
                <TextView
                    android:id="@+id/media_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/media_visibility"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/encryption_whole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/media_whole"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:background="@color/whatsAppCard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/encryptionIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/padlock"
                    app:tint="@color/greyish"
                    android:layout_marginEnd="10dp"
                    android:paddingVertical="5dp"
                    />
                <TextView
                    android:id="@+id/encryption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/encryption"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/encryptionIcon"
                    android:orientation="horizontal"
                    />
                <TextView
                    android:id="@+id/encryption_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/encryption_description"
                    android:layout_below="@id/encryption"
                    android:layout_toRightOf="@id/encryptionIcon"
                    android:textColor="@color/white"
                    android:orientation="horizontal"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/disappearing_whole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/encryption_whole"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:background="@color/whatsAppCard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/disappearing_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/disappearing_messages"
                    app:tint="@color/greyish"
                    android:layout_marginEnd="10dp"
                    android:paddingVertical="2dp"
                    />
                <TextView
                    android:id="@+id/disappearing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disappearing_messages"
                    android:textColor="@color/white"
                    android:layout_toEndOf="@id/disappearing_icon"
                    android:orientation="horizontal"
                    />
                <TextView
                    android:id="@+id/disappearing_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/off"
                    android:layout_below="@id/disappearing"
                    android:layout_toEndOf="@id/disappearing_icon"
                    android:textColor="@color/white"
                    android:orientation="horizontal"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/chat_lock_whole"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/disappearing_whole"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:background="@color/whatsAppCard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/chat_lock_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/chat_lock_icon"
                    app:tint="@color/greyish"
                    android:layout_marginEnd="10dp"
                    android:paddingVertical="2dp"
                    />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    />
                <TextView
                    android:id="@+id/chat_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_lock"
                    android:textColor="@color/white"
                    android:layout_toEndOf="@id/chat_lock_icon"
                    android:orientation="horizontal"
                    />
                <TextView
                    android:id="@+id/chat_lock_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_lock_description"
                    android:layout_toStartOf="@id/switch_btn"
                    android:layout_below="@id/chat_lock"
                    android:layout_toEndOf="@id/chat_lock_icon"
                    android:textColor="@color/white"
                    android:orientation="horizontal"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/privacy_whole"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chat_lock_whole"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:background="@color/whatsAppCard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/privacy_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/shield"
                    app:tint="@color/greyish"
                    android:layout_marginEnd="10dp"
                    android:paddingVertical="5dp"
                    />

                <TextView
                    android:id="@+id/privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advanced_chat_privacy"
                    android:textColor="@color/white"
                    android:layout_toEndOf="@id/privacy_icon"
                    android:orientation="horizontal"
                    />
                <TextView
                    android:id="@+id/privacy_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/off"
                    android:layout_below="@id/privacy"
                    android:layout_toEndOf="@id/privacy_icon"
                    android:textColor="@color/white"
                    android:orientation="horizontal"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/create_group_whole"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/privacy_whole"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:background="@color/whatsAppCard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/create_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_create_header"
                    android:textColor="@color/greyish"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    />
                <ImageView
                    android:id="@+id/create_group_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/people"
                    android:layout_below="@id/create_group"
                    android:background="@drawable/whatsapp_create_group_background"
                    app:tint="#090"
                    android:layout_marginEnd="10dp"
                    android:paddingVertical="5dp"
                    />

                <TextView
                    android:id="@+id/create_group_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_group_message"
                    android:layout_below="@id/create_group"
                    android:layout_toEndOf="@id/create_group_icon"
                    android:textColor="@color/white"
                    android:orientation="horizontal"
                    />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>