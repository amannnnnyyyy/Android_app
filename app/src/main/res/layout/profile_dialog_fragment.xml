<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
 <TextView
     android:id="@+id/name"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Unknown"
     android:fontFamily="sans-serif-condensed"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:textSize="20sp"
     android:textStyle="bold|italic"
     android:padding="20dp"
     />
    <ImageView
        android:id="@+id/userProfile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/profile_picture"
        android:src="@drawable/profile_picture"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toTopOf="@id/buttons"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        >
        <ImageView
            android:id="@+id/messages"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="user messages"
            android:src="@drawable/people"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/audio_call"
            />
        <ImageView
            android:id="@+id/audio_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/video_call"
            android:src="@drawable/audio_call"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/messages"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/video_call"
            />
        <ImageView
            android:id="@+id/video_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/video_call"
            android:src="@drawable/video_call_whatsapp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/audio_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/detail"
            />
        <ImageView
            android:id="@+id/detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="user details"
            android:src="@drawable/people"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/video_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>